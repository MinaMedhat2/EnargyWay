@page "/register"
@layout CheckoutLayout
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using Company.Client.Models
@using System.Net.Http.Json
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Account | EnergyWay</PageTitle>

<style>
    /* === START: REFINED STYLES (Consistent with Login Page) === */

    /* Import a nice font from Google Fonts */
    /* Apply the background to the layout's container */
    .checkout-page-background {
        background-image: url('images/back.jpeg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    .register-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }

    .register-box {
        width: 100%;
        max-width: 400px;
        padding: 2.5rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        text-align: center;
    }

        /* --- Refined "Create Your Account" Style --- */
        .register-box h3 {
            margin-bottom: 2rem;
            font-weight: 300;
            font-size: 2.25rem;
            letter-spacing: 0.5px;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.15);
        }

    /* --- Refined form controls --- */
    .form-control {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 8px;
        padding: 0.85rem 1.1rem;
        font-size: 1rem;
        margin-bottom: 0.75rem;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control:focus {
            background: rgba(0, 0, 0, 0.5);
            color: white;
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    /* --- Refined button --- */
    .btn-primary {
        width: 100%;
        padding: 0.85rem;
        font-weight: 500;
        font-size: 1rem;
        border-radius: 8px;
    }

    .btn-link {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 0.9rem;
    }

        .btn-link:hover {
            color: white;
        }

    .alert {
        text-align: left;
        border-radius: 8px;
        border: none;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.8);
        color: white;
    }

    .alert-success {
        background-color: rgba(25, 135, 84, 0.8);
        color: white;
    }
    /* === END: REFINED STYLES === */
</style>

<div class="register-container">
    <div class="register-box">
        <h3>Create Your Account</h3>
        <EditForm Model="registerRequest" OnValidSubmit="HandleRegistration" FormName="registerForm">
            <DataAnnotationsValidator />

            <div class="form-group">
                <InputText class="form-control" @bind-Value="registerRequest.Username" placeholder="Username" />
                <ValidationMessage For="@(() => registerRequest.Username)" />
            </div>

            <div class="form-group">
                <InputText class="form-control" @bind-Value="registerRequest.Email" placeholder="Email address" />
                <ValidationMessage For="@(() => registerRequest.Email)" />
            </div>

            <div class="form-group">
                <InputText type="password" class="form-control" @bind-Value="registerRequest.Password" placeholder="Password" />
                <ValidationMessage For="@(() => registerRequest.Password)" />
            </div>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger mt-3">@errorMessage</div>
            }
            @if (isSuccess)
            {
                <div class="alert alert-success mt-3">Registration successful! You can now log in.</div>
            }

            <button type="submit" class="btn btn-primary mt-4" disabled="@isProcessing">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                }
                else
                {
                    <span>Create Account</span>
                }
            </button>

            <div class="mt-3">
                <button type="button" class="btn btn-link" @onclick="GoToLogin">Already have an account? Login</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private RegisterRequest registerRequest = new();
    private string? errorMessage;
    private bool isProcessing = false;
    private bool isSuccess = false;

    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private async Task HandleRegistration()
    {
        isProcessing = true;
        errorMessage = null;
        isSuccess = false;

        try
        {
            var client = HttpClientFactory.CreateClient("WebAPI");
            var response = await client.PostAsJsonAsync("api/Auth/register", registerRequest);

            if (response.IsSuccessStatusCode)
            {
                isSuccess = true;
                registerRequest = new();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = string.IsNullOrWhiteSpace(errorContent) ? "Registration failed. Please try again." : errorContent;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void GoToLogin()
    {
        // Pass the returnUrl to the login page as well
        var uri = string.IsNullOrEmpty(ReturnUrl) ? "/login" : $"/login?returnUrl={Uri.EscapeDataString(ReturnUrl)}";
        NavigationManager.NavigateTo(uri);
    }
}
